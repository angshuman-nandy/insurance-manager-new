<div class="container">
<div class="rows">
  <div class="col-md-push-6 col-sm-6 col-xs-12 new_btn" >
  <%= link_back(plans_path) %>
  <%= link_to_dash %>
  <% if current_user.admin==true %>
  <%= edit_link(edit_plan_path(@plan.id)) %>
  <%= delete_link(plan_path(@plan.id)) %>
  <% end %>
  </div>
</div>
</div>
<div class="container">
  <div class="rows">
    <div class="col-md-offset-3 col-md-6 display_box" >
      <% @company = Company.find(@plan.company_id) %>
      <h2> <%= @plan.name %> </h2>
      <h3><strong>Description: </strong>  <%= @plan.description %> </h3>
      <h3><strong>Company: </strong>  <%= @company.name %> </h3>
      <h3><strong>Premium amount: </strong>  <%= @plan.premium_amount %> INR </h3>
      <h3><strong>Sum insured: </strong>  <%= @plan.sum_insured %> INR </h3>
      <h3><strong>Duration </strong>  <%= @plan.duration %> years</h3>
    </div>
  </div>
</div>