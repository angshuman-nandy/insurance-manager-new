<div class="container">
<div class="container form_box">

  <%= form_for @plan, :html => {:class => "form-horizontal center"} do |f| %>
    <% if @plan.errors.any? %>
      <div id="error_explanation col-sm-offset-4" style="color: red;">
        <h2>
        <%= pluralize(@plan.errors.count, "error") %> prohibited
        this user from being saved:
        </h2>
        <ul>
        <% @plan.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :name, "Name of plan", class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :name,placeholder: "e.g. retirement/car", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :company_id, "Company", class: "col-md-4 control-label" %>
      <div class="col-md-4">

        <%= f.collection_select :company_id, Company.all, :id, :name %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, "Description", class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :description,placeholder: "brief description of plan", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :duration, "Duration", class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :duration,placeholder: "in years", class: "form-control" %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :premium_amount, "Premium amount", class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :premium_amount,placeholder: "in INR", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :sum_insured, "Insured amount", class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :sum_insured,placeholder: "in INR", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">        
      <div class="col-md-offset-4">
        <%= f.submit "Submit", class: "btn btn-success btn-lg" %>
        <%= link_back(plans_path) %>
        <%= link_to_dash %>
      </div>
    </div>


  <% end %>
</div>
</div>