<div class="container">
<div class="rows">
  <div class="col-md-push-6 col-sm-6 col-xs-12 new_btn" >
  <%= link_back(policies_select_company_path) %>
  <%= link_to_dash %>
  </div>
</div>
</div>
<div class="container">
    <div class="rows">
      <% @plans.each do |i| %>
      <%= link_to new_policy_path(:plan_id => i.id) do %>
      <div class="col-md-5 plan_type_box" >
        <h2><%=i.name%></h2><br>
        <h3><strong>description:</strong> <%=i.description%></h3>
        <h3><strong>insured_amount:</strong> <%=i.sum_insured%> INR</h3>
        <h3><strong>premium_amount:</strong> <%=i.premium_amount%> INR</h3>
        <h3><strong>duration:</strong> <%=i.duration%> years</h3>
      </div>
      <% end %>
      <% end %>
    </div>
</div>
