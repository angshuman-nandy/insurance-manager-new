<% @p_id = @policy.plan_id %>
<% @plan = Plan.find(@p_id) %>
<% @company = Company.find(@plan.company_id) %> 
<% @user = User.find(@policy.user_id) %>
<div class="container">
<div class="rows">
  <div class="col-md-push-6 col-sm-6 col-xs-12 new_btn" >
  <%= link_back(policies_path) %>
  <%= link_to_dash %>
  <% if current_user.admin==true %>
  <%= edit_link(edit_policy_path(@policy.id)) %>
  <%= delete_link(policy_path(@policy.id)) %>
  <% end %>
  </div>
</div>
</div>
<div class="container">
  <div class="rows">
    <div class="col-md-offset-3 col-md-6 display_box" >
      <h2> <%= @plan.name %> </h2>
      <h3><strong>Holder's name: </strong>  <%= @user.first_name %> <%= @user.last_name %> </h3>
      <h3><strong>Company: </strong>  <%= @company.name %> </h3>
      <h3><strong>Premium amount: </strong>  <%= @policy.premium_amount %> INR </h3>
      <h3><strong>Sum insured: </strong>  <%= @policy.sum_insured %> INR </h3>
      <h3><strong>Date of Purchase: </strong>  <%= @policy.purchase_date %></h3>
      <h3><strong>Maturity Date: </strong>  <%= @policy.mature_date %></h3>
      <h3><strong>Duration </strong>  <%= @plan.duration %> years</h3>
      <h3><strong>Commission: </strong>  <%= @policy.commission %> INR</h3>

    </div>
  </div>
</div>