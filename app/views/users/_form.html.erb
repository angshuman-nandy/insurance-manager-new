<div class="container form_box">
 <%= form_for @user, :html => {:class => "form-horizontal center"} do |f| %>
   <% if @user.errors.any? %>
        <div id="error_explanation col-sm-offset-4" style="color: red;">
          <h2>
          <%= pluralize(@user.errors.count, "error") %> prohibited
          this user from being saved:
          </h2>
          <ul>
          <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :first_name, "First name", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.text_field :first_name,placeholder: "Fname", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :last_name, "Last name", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.text_field :last_name,placeholder: "Lname", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, "Email id", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.text_field :email,placeholder: "user@domain.com", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, "Password", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.password_field :password,placeholder: "should be atleast 6 characters", class: "form-control" %>
        </div>
      </div>
       
          
      <div class="form-group">
         <%= f.label "Password confirmation", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.password_field :password_confirmation,placeholder: "re-type password", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :contact_number, "Contact Number", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.text_field :contact_number,placeholder: "should be 10 digits", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :address, "Address", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.text_field :address,placeholder: "only numbers and letters", class: "form-control" %>
        </div>
      </div>
     <div class="form-group">        
      <div class="col-sm-offset-4 col-sm-10">
        <%= f.submit "Submit", class: "btn btn-btn-success btn-lg" %>
      </div>
    </div>
     
 <% end %>
 </div>